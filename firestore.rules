rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* USERS */
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    /* CHATS */
    match /chats/{chatId} {
      // Allow read/write for any authenticated user (Temporary Fix for permissions)
      allow read, write: if request.auth != null;

      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    /* GLOBAL MESSAGE RULE (Double Grey Tick & General Access) */
    // This allows access to messages across the entire DB provided the user is authenticated.
    // Ideally, you'd want to restrict this further, but for getting it working:
    match /{path=**}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
  }
}
